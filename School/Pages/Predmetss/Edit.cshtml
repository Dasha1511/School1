@page
@model School.Pages.Predmetss.EditModel

@{
    ViewData["Title"] = "Изменить информацию о предмете";
}

<h1>Изменить</h1>

<h4>Предмет</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Predmets.ID" />
            <div class="form-group">
                <label asp-for="Predmets.Naimenovanie" class="control-label"></label>
                <input asp-for="Predmets.Naimenovanie" class="form-control" />
                <span asp-validation-for="Predmets.Naimenovanie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Predmets.Opisanie" class="control-label"></label>
                <input asp-for="Predmets.Opisanie" class="form-control" />
                <span asp-validation-for="Predmets.Opisanie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Predmets.StaffID" class="control-label"></label>
                <input asp-for="Predmets.StaffID" class="form-control" />
                <span asp-validation-for="Predmets.StaffID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
