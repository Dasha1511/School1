@page
@model School.Pages.Vids.IndexModel

@{
    ViewData["Title"] = "Все виды классов";
}

<h1>Виды классов</h1>

<p>
    <a asp-page="Create">Добавить новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vid[0].ID_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vid[0].Naimenovanie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vid[0].Opisanie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vid) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID_type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naimenovanie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opisanie)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Подробнее</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
