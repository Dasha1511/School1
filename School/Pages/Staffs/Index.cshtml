@page
@model School.Pages.Staffs.IndexModel

@{
    ViewData["Title"] = "Информация о сотрудниках";
}

<h1>Информация о сотрудниках</h1>

<p>
    <a asp-page="Create">Добавить сотрудника</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].FIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Old)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Pol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Pasport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Dolznost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Staff) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Old)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pasport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @{
                    try
                    {
                        @Model.Dolznost.First(d => d.ID == item.DolznostID).NaimenovanieDolznosti
                    }
                    catch
                    {
                        <p>нет</p>
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Подробнее</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
